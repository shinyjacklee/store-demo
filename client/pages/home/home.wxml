<!--pages/home/home.wxml-->
<image src='/images/bg.png' class="bg"></image>
<view class='hot-card'>
  <view class='hot-name'>
    <image src='/images/line-red.png' class='hot-name-line'></image>
    <view class='hot-name-text'>{{productList[0].name}}</view>
    <image src='/images/line-red.png' class='hot-name-line'></image>
  </view>
  <image class='hot-info' src='/images/discount.png'>
  </image>
  <image class='hot-image' src='{{productList[0].image}}'> </image>
</view>

<view class='list-title'>
  <image class='list-title-line' src='/images/line-black.png'></image>
  <view class='list-title-text'>春季推荐</view>
  <image class='list-title-line' src='/images/line-black.png'></image>
</view>
<view class='product-row' wx:for="{{productList}}" wx:key="id" wx:if="{{index%2===1}}">


  <navigator class='product-card'>
    <image class='product-image' src='{{productList[index].image}}' mode='widthFix'></image>
    <view class='product-name'>{{productList[index].name}}</view>
    <view class='product-meta'>
      <view class='product-money'>$</view>
      <view class='product-price'>{{productList[index].price}}</view>
      <view class='product-add'>"+"</view>
    </view>

  </navigator>
</view>
